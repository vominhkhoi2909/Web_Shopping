@model IEnumerable<Shopping.Models.tProduct>

@{
    ViewBag.Title = "Danh Mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Mục Sản Phẩm</h2>

<p>
    @Html.ActionLink("Thêm Mới Sản Phẩm", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ID")            
        </th>
        <th>
            @Html.DisplayName("Tên Sản Phẩm")
        </th>
        <th>
            @Html.DisplayName("Đơn GIá")
        </th>
        <th></th>
    </tr>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.pID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pPrice)$
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id = item.pID }) |
            @Html.ActionLink("Xóa", "Delete", new { id = item.pID })
        </td>
    </tr>
}

</table>
