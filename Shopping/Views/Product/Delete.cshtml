@model Shopping.Models.tProduct

@{
    ViewBag.Title = "Xóa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Xóa Sản Phẩm</h2>

<h3>Bạn chắc chắn muốn xóa sản phẩm này?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("ID")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pID)
        </dd>

        <dt>
            @Html.DisplayName("Tên Sản Phẩm")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pName)
        </dd>

        <dt>
            @Html.DisplayName("Đơn Giá")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.pPrice)$
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Xóa Sản Phẩm" class="btn btn-default" /> |
            @Html.ActionLink("Trở lại danh sách", "Index")
        </div>
    }
</div>
