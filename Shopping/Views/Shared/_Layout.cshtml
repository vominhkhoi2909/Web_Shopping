<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cửa Hàng - @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("V.M.K", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Trang Chủ", "Index", "Home")</li>
                    <li>@Html.ActionLink("Sản Phẩm", "Index", "Product")</li>
                    <li>@Html.ActionLink("Lịch Sử", "Index", "History")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="/ShoppingCart/GoToCart/" style="width:30px; height:30px;">
                            <img src="@Url.Content("~/Content/Cart2.png")" style="width: 30px; height: 30px; margin-top: -10px;" />
                            @Html.Action("BagCart", "ShoppingCart")
                        </a>
                    </li>
                    <li>
                        <a href="/Home/Index/" style="width:30px; height:30px;">
                            <img src="@Url.Content("~/Content/User.png")" style="width:30px; height:30px; margin-top:-10px; margin-left:20px" />
                        </a>
                    </li>
                    <li>
                        <a href="/Login/Logout/" style="width:30px; height:30px;">
                            <img src="@Url.Content("~/Content/exit.png")" style="width:30px; height:30px; margin-top:-10px; margin-left:20px" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2022 - V.M.K</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
