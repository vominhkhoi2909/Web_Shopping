@model IEnumerable<Shopping.Models.tCart>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lịch Sử</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("ID")
        </th>
        <th>
            @Html.DisplayName("Ngày Thanh Toán")
        </th>
        <th>
            @Html.DisplayName("Hình Thức Thanh Toán")
        </th>
        <th>
            @Html.DisplayName("Tổng Tiền")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.cID)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cDate)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cPayType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.cTotal)
    </td>
    <td>
        @Html.ActionLink("Chi Tiết", "Details", new { id=item.cID })
    </td>
</tr>
}

</table>
